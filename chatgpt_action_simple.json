{
  "openapi": "3.1.0",
  "info": {
    "title": "Internet Gateway - Web Access",
    "description": "Search the web and fetch content from any website. Provides unrestricted internet access for research and information retrieval.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-app-name.onrender.com",
      "description": "Replace with your actual Render.com URL"
    }
  ],
  "paths": {
    "/tools/search": {
      "post": {
        "operationId": "searchWeb",
        "summary": "Search the web for information",
        "description": "Searches the web using DuckDuckGo and returns relevant results with URLs",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "The search query"
                  }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "URL of the result"
                          },
                          "title": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tools/fetch": {
      "post": {
        "operationId": "fetchWebpage",
        "summary": "Fetch and read content from any webpage",
        "description": "Retrieves and parses the text content from any URL",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "The URL to fetch"
                  }
                },
                "required": ["id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Webpage content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "text": {
                      "type": "string",
                      "description": "The text content of the page"
                    },
                    "url": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
